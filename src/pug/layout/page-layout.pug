include ../components/_mixin-inclusion.pug

block variables
-
  const config = {
    brand: {
      name: 'Forester',
      phone: {
        href: 'tel:+79999999999',
        label: '+7&nbsp;(999)&nbsp;999-99-99',
      },
    },
    localization: 'ru',
  };
  const pageTitlePrefix = config.brand.name;
  const lang = config.localization;
  const scripts = pageScripts ?? [];
  const pageDescription = 'Услуги по спилу и подрезке деревье любой сложности';

doctype html
html(lang= lang)
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name = "description", content = pageDescription)
    link(href=require('/src/assets/styles/main.scss') rel="stylesheet")
    link(rel="shortcut icon", href=require('/src/assets/images/favicon.png'), type="image/x-icon")
    title= `${pageTitlePrefix} — ${pageTitle}`
    script(src='@script/helpers/pug-plugin-dev-server.ts')
    script(src='@script/pages/all/index.ts', defer)
    each item in scripts
      script(src=`@script/${item}`, defer)
    +google-tag-manager('GTM-TZCVG6N3')
  body
    +google-tag-manager-pixel('GTM-TZCVG6N3')
    block header
      include ../components/page-header/page-header.pug
    block content
    block footer
      include ../components/page-footer.pug
