mixin input-field(label)
  -
    const {type = 'text'} = attributes;
    const {icon, ...restAtt} = attributes;
    const classNames = restAtt.class;
    restAtt?.class && delete restAtt.class;

  case type
    when 'checkbox'
      label.input-field(class=classNames)
        input.input-field__input&attributes(restAtt)
        span.input-field__check-mark
          if icon
            +sprite(icon)
          else
            <svg width="25" height="25" fill="none"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9.6 11 3 3 10-10"/><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.6 12v7a2 2 0 0 1-2 2h-14a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/></svg>
        span.input-field__label= label
    when 'textarea'
      label.input-field(class=classNames)= label
        textarea.input-field__input&attributes(restAtt) 
    default 
      label.input-field(class=classNames)
        if icon 
          +sprite(icon)(class='input-field__icon')
        span.input-field__label= label
        input.input-field__input&attributes(restAtt)
